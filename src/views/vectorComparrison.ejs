<div class="card">
	<h3>Vector Comparison</h3>
	<div class="card-body">
		<div class="container border">
			<div class="row">
				<div class="col-sm-6 col-md-3 mb-2">
					<button id="manhattanDist" type="button" class="btn btn-primary w-100">Manhattan Distance</button>
				</div>
				<div class="col-sm-6 col-md-3 mb-2">
					<button id="euclideanDist" type="button" class="btn btn-primary w-100">Euclidean Distance</button>
				</div>
				<div class="col-sm-6 col-md-3 mb-2">
					<button id="dotProd" type="button" class="btn btn-primary w-100">Dot Product</button>
				</div>
